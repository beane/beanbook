<% users.each do |user| %>
  <% next if user == current_user %>

  <% if current_user.is_friends_with?(user.id) %>
  <!-- button to unfriend -->
    <% id = Friendship.find_by_inbound_friend_id_and_outbound_friend_id(current_user.id, user.id).id %>
    <% button = button_to "Unfriend", user_friendship_url(current_user, id), method: :delete %>
  <!-- else if user is a pending friend? -->
  <!-- button to complete or reject -->
  <% else %>
    <!-- button to friend -->
  <% end %>

  <span>
    <%= user.first_name %>
    <%= user.last_name %>
    <%= button %>
  </span>
<% end %>
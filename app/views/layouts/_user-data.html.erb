<!-- much of this will be in the sidebar as well -->
<% if logged_in? %>
  Hello, <a href="<%= user_url(current_user) %>"><%= current_user.first_name %>!</a>
  <a href="<%= edit_user_url(current_user) %>">Edit Your Profile</a>
  <a href="<%= root_url %>">Feed</a>
  <a href="<%= notifications_url %>">Your Notifications</a>
  <a href="<%= user_friends_url(current_user) %>">Your Friends</a>
  <a href="<%= users_url %>">Find New Friends</a>
  <a href="<%= user_tags_url(current_user) %>">Your Tags</a>
  <a href="<%= user_photos_url(current_user) %>">Your Photos</a>
  <a href="<%= new_user_photo_url(current_user) %>">Upload a New Photo</a>
  <%= button_to "Log out", session_url, method: :delete %>
<% else %>
  <a href="<%= new_session_url %>">Log In</a>
  <a href="<%= new_user_url %>">Sign Up</a>
<% end %>
<ul class="comments">

  <% object.comments.each do |comment| %>
    <li><%= comment.author.name %>: <%= comment.body %></li>

    <% user = comment.author %>
    <% if current_user == user || current_user.friends.include?(user) %>
      <%= button_to "Delete Comment", comment_url(comment), method: :delete %>
    <% end %>

    <%= render partial: 'user_likes/form', locals: {object: comment, type: "Comment"} %>
  <% end %>

</ul>
<%= comment.author.name %>: <%= comment.body %>

<% user = comment.author %>
<% if current_user == user || current_user.friends.include?(user) %>
  <%= button_to "Delete Comment", comment_url(comment), method: :delete, remote: true %>
<% end %>

<%= render partial: 'user_likes/form', locals: {object: comment, type: "Comment"} %>
